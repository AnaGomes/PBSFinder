- content_for :stylesheets do
  = stylesheet_link_tag 'jobs/new'
- content_for :javascripts do
    = javascript_include_tag 'jobs/create_mail'
div class="tabs-content"
  div class="panel panel-info"
    div class="panel-heading"
      h3 class="panel-title" = t('job.create.notice.title')
    table class="table"
      tbody
        tr class='list-row'
          td class='list-column'
            span class="list-title" = t('job.create.notice.notice1.title')
          td class='list-column'
            span = t('job.create.notice.notice1.content')
        tr class='list-row'
          td class='list-column'
            span class="list-title" = t('job.create.notice.notice3.title')
          td class='list-column'
            span = t('job.create.notice.notice3.content')
        tr class='list-row'
          td class='list-column'
            span class="list-title" = t('job.create.notice.notice4.title')
          td class='list-column'
            span = t('job.create.notice.notice4.content')
  = form_for :job, url(:jobs, :create), :class => 'form-horizontal', :id => 'job-form' do |f|
    = partial 'jobs/form', :locals => { :f => f }
